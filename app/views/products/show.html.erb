<h1><%= @product.title %></h1>

<%= form_for @price_test do |f| %>
  <%= f.hidden_field(:product_id, value: @product.id) %>
    <%= f.label(:percent_increase)%>
    <%= f.text_field(:percent_increase) %>
    <%= f.submit %>
<% end %>

<table>
  <thead>
    <th><strong>Title</strong></th>
    <th><strong>Price</strong></th>
  </thead>
  <% @product.variants.each do |variant| %>
      <tr>
        <td><%= variant.title %></td>
        <td><%= variant.price %></td>
      </tr>
  <% end %>
</table>